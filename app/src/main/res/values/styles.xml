<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Main layout of a chat bubble -->
    <style name="chat_bubble_layout" >
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Chat bubble avatar styles -->
    <style name="chat_bubble_avatar" >
        <item name="android:layout_width">@dimen/avatar_width</item>
        <item name="android:layout_height">@dimen/avatar_width</item>
        <item name="android:layout_margin">@dimen/chat_bubble_avatar_margin</item>
        <item name="android:src">@drawable/no_avatar</item>
    </style>

    <!-- Chat bubble text layout styles -->
    <style name="chat_bubble_text_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/chat_bubble_avatar_margin</item>
    </style>

    <!-- Chat bubble text styles -->
    <style name="chat_bubble_text_message" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">@dimen/chat_bubble_avatar_margin</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <!-- Chat bubble name text styles -->
    <style name="chat_bubble_name" parent="chat_bubble_text_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Chat bubble photo styles -->
    <style name="chat_bubble_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/chat_bubble_avatar_margin</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
